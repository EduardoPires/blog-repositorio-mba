@model BlogApp.Domain.Entities.Post

<h2>@Model.Title</h2>
<p>@Model.Content</p>
<p><strong>Autor:</strong> @Model.Author.FullName</p>
<p><strong>Publicado em:</strong> @Model.PublishedDate.ToString("dd/MM/yyyy")</p>

<a href="/Post/Index" class="btn btn-secondary">Voltar</a>
@if (User.Identity.Name == Model.AuthorId || User.IsInRole("Admin"))
{
    <a href="/Post/Edit/@Model.Id" class="btn btn-primary">Editar</a>
    <form asp-action="Delete" asp-controller="Post" method="post" class="d-inline">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
    </form>
}
